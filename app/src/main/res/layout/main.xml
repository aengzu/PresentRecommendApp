<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73DADADA"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareroundeb"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="두근두근 !"
                android:textColor="#BFFF3334"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareroundb"
                android:gravity="center"
                android:text="선물 추천"
                android:textSize="33sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/box_img"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="#1ADADADA"
                android:drawablePadding="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pink_coral_present"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareroundb"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="선물 박스 누르고 선물 추천 받으러 가기~"
                android:textColor=" #BFFF3334"
                android:textColorLink="#663FB8"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bg_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="6dip"

                    android:layout_weight="1"
                    android:background="@drawable/main_box"
                    android:drawableBottom="@drawable/taste_icon"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:lineSpacingExtra="5sp"
                    android:padding="10dip"
                    android:paddingLeft="20dp"
                    android:text="밸런스 게임으로\n상대 취향 알아내기"
                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/mg_bt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="6dip"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_box"
                    android:drawableBottom="@drawable/ranking"

                    android:fontFamily="@font/nanumsquareroundb"
                    android:lineSpacingExtra="5sp"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:text="선물 월드컵으로\n상대 취향 알아내기"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/friendlist_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"

                    android:background="@drawable/main_box"
                    android:drawableBottom="@drawable/main_friends"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:text="친구 목록"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/mypage_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_box"
                    android:drawableBottom="@drawable/main_mypage"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:text="마이페이지"

                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

